{
  "name": "port-monitor-desktop",
  "productName": "Port Monitor",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "port",
    "monitor",
    "network",
    "system"
  ],
  "author": "Port Monitor",
  "license": "MIT",
  "description": "Real-time port monitoring for macOS",
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "sharp": "^0.34.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "build": {
    "appId": "com.portmonitor.app",
    "productName": "Port Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  }
}
